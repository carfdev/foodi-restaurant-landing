---
import { Image } from 'astro:assets';

interface Props {
  image: ImageMetadata;
  title: string;
  description: string;
}

const { image: Img, title, description } = Astro.props;
---

<div class="flex flex-col items-center gap-4 rounded-3xl bg-white p-8 shadow-lg">
  <div class="bg-malachite-200 flex aspect-square w-1/2 items-center justify-center rounded-full">
    <Image src={Img} alt={title} />
  </div>
  <p class="text-3xl font-semibold">{title}</p>
  <p class="text-xl font-medium text-gray-500">({description})</p>
</div>
