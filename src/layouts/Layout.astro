---
import { ClientRouter } from 'astro:transitions';
import { Font } from 'astro:assets';
import '@/styles/global.css';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import ProjectInfoBanner from '@/components/ProjectInfoBanner.astro';

interface Props {
  title?: string;
  showBanner?: boolean;
}

const { title = 'Restaurant Website UI Template (Community) â€“ Figma', showBanner = true } =
  Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <Font cssVariable="--font-poppins" preload />
    <Font cssVariable="--font-inter" preload />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class="grid min-h-screen grid-rows-[auto_1fr_auto] overflow-x-hidden bg-gray-50">
    <Header />
    <main>
      <slot />
      {showBanner && <ProjectInfoBanner />}
    </main>
    <Footer />
  </body>
</html>
